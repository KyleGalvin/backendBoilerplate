{
  "name": "backend_boilerplate",
  "version": "0.0.1",
  "description": "basic blank project setup. Hopefully saves you time configuring",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && mkdirp ./dist && tsc",
    "clean": "rimraf ./dist",
    "lint": "tslint --force 'src/**/*.ts' > ./tslint.err",
    "local": "nodemon -e ts -w ./src -x npm run local:watch",
    "local:watch": "npm run build && npm run lint && cat ./tslint.err && npm run build && node --inspect ./dist/src/index.js",
    "start": "npm run build && node ./dist/src/index.js",
    "test": "set NODE_ENV=TEST && nyc --extension .ts --extension .tsx mocha --timeout 10000 -r ts-node/register ./test/*.ts && nyc report --reporter text-lcov --extension .ts --extension .tsx | coveralls",
    "test-watch": "npm run clean && mocha-typescript-watch -p tsconfig.json -o ./mocha.opts",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KyleGalvin/backendBoilerplate.git"
  },
  "author": "Kyle Galvin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KyleGalvin/backendBoilerplate/issues"
  },
  "homepage": "https://github.com/KyleGalvin/backendBoilerplate#readme",
  "devDependencies": {
    "coveralls": "^3.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^5.0.5",
    "mocha-lcov-reporter": "^1.3.0",
    "mocha-typescript": "^1.1.12",
    "nodemon": "^1.12.1",
    "nyc": "^11.3.0",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.0"
  },
  "dependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/body-parser": "^1.16.5",
    "@types/bunyan": "^1.8.3",
    "@types/cors": "^2.8.1",
    "@types/hapi": "^17.0.12",
    "@types/hapi-auth-jwt2": "^8.0.1",
    "@types/inert": "^5.1.0",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/multer": "^1.3.6",
    "@types/node": "^9.6.1",
    "@types/sql.js": "0.0.29",
    "@types/uuid": "^3.4.3",
    "@types/vision": "^5.3.2",
    "bcrypt": "^2.0.0",
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "cors": "^2.8.4",
    "hapi": "^17.4.0",
    "hapi-auth-jwt2": "^8.1.0",
    "hapi-swagger": "^9.1.1",
    "https": "^1.0.0",
    "inert": "^5.1.0",
    "jsonwebtoken": "^8.1.0",
    "multer": "^1.3.0",
    "npm": "^6.6.0",
    "pg": "^7.3.0",
    "reflect-metadata": "^0.1.10",
    "sql.js": "^0.5.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.8.0",
    "typemoq": "^2.1.0",
    "typeorm": "^0.2.0",
    "typescript": "^2.7.2",
    "typescript-ioc": "^1.1.0",
    "vision": "^5.3.2",
    "snyk": "^1.150.0"
  },
  "snyk": true
}
