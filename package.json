{
  "name": "backend_boilerplate",
  "version": "0.0.0",
  "description": "basic blank project setup. Hopefully saves you time configuring",
  "main": "index.js",
  "scripts": {
    "bundle": "npm run clean && mkdirp ./dist && tsc",
    "clean": "rm -rf ./dist",
    "lint": "tslint --force 'src/**/*.ts' > ./tslint.err",
    "local": "nodemon -e ts -w ./src -x npm run local:watch",
    "local:watch": "npm run build && npm run lint && cat ./tslint.err &&  npm start",
    "heroku-postbuild": "npm run build",
    "build": "npm run clean && npm run bundle",
    "start": "node ./dist/index.js",
    "test": "npm run clean && mocha-typescript-watch -p tsconfig.json -o ./mocha.opts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KyleGalvin/backendBoilerplate.git"
  },
  "author": "Kyle Galvin",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/KyleGalvin/backendBoilerplate/issues"
  },
  "homepage": "https://github.com/KyleGalvin/backendBoilerplate#readme",
  "devDependencies": {
    "mkdirp": "^0.5.1",
    "mocha": "^4.0.1",
    "mocha-typescript": "^1.1.12",
    "nodemon": "^1.12.1",
    "source-map-support": "^0.5.0"
  },
  "dependencies": {
    "@types/bcrypt": "^1.0.0",
    "@types/body-parser": "^1.16.5",
    "@types/bunyan": "^1.8.3",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.37",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/multer": "^1.3.6",
    "@types/node": "^8.0.51",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "cors": "^2.8.4",
    "express": "^4.16.0",
    "express-validator": "^4.3.0",
    "https": "^1.0.0",
    "jsonwebtoken": "^8.1.0",
    "multer": "^1.3.0",
    "pg": "^7.3.0",
    "reflect-metadata": "^0.1.10",
    "typemoq": "^2.1.0",
    "typeorm": "^0.1.1",
    "typescript": "2.5.3"
  }
}
